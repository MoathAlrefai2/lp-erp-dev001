<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="lp_project_view" model="ir.ui.view">
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project" />
    <field name="arch" type="xml">
      <xpath expr="//div[@name='options_active']" position="before">
        <div name="options_active">
          <div>
            <label for="type" class="oe_inline" string="Project Type:"/>
            <field name="type" class="oe_inline oe_input_align"/>
          </div>
        </div>
      </xpath>
      <field name="partner_email" position="after">
        <field name="status" />
      </field>
      <field name="status" position="after">
        <field name="teams_link" />
      </field>
      <field name="teams_link" position="after">
        <field name="devops_link" />
      </field>
      <field name="company_id" position="after">
        <field name="member_ids" widget="many2many_tags"/>
      </field>
    </field>
  </record>

  <record id="lp_project_group_by_type" model="ir.ui.view">
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_project_filter" />
    <field name="arch" type="xml">
      <search>
        <group expand="0" string="Group By">
          <filter string="Type" name="type" context="{'group_by':'type'}"/>
          <filter string="Status" name="status" context="{'group_by':'status'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="lp_project_type_kanban" model="ir.ui.view">
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_kanban" />
    <field name="arch" type="xml">
      <xpath expr="//div[@class='o_primary']" position="inside">
        <p>
          <field name="type" />
        </p>
      </xpath>
    </field>
  </record>

</odoo>
