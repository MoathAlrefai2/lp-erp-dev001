<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="lp_contact_view_form" model="ir.ui.view">
     <field name="name">contact_lp</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
           <xpath expr="//field[@name='type']" position="after">
             <field name="lp_position"/>
           </xpath>
            <xpath expr="//field[@name='name']" position="replace">
                <div class="address_format">
                <field name="lp_label" widget="label_selection"   style="width: 9%" attrs="{'invisible' : [('company_type', '=', 'company')]}" />
              <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"  style="width: 58%"/>
                </div>
            </xpath>
    </field>
  </record>
